# Shopify App Configuration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_APP_URL=https://your-app-domain.com
SHOPIFY_SCOPES=read_products,read_orders,read_customers,write_script_tags,write_themes

# Database
MONGODB_URI=mongodb://localhost:27017/shopify-mobile-app-builder

# APK Generator Service
APK_GENERATOR_URL=http://localhost:3001

# JWT Secret
JWT_SECRET=your_jwt_secret_key

# Environment
NODE_ENV=development
PORT=3000

# Webhook Secret
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=shopify-mobile-apps
AWS_REGION=us-east-1