<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
  <div class="min-h-screen">
    <header class="bg-white shadow">
      <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
        <h1 class="text-2xl font-bold text-gray-900">Manage Leads</h1>
        <div class="flex items-center gap-4">
          <a href="/admin" class="text-gray-600 hover:text-green-600">‚Üê Dashboard</a>
          <a href="/admin/logout" class="text-red-600 hover:text-red-700">Logout</a>
        </div>
      </div>
    </header>

    <div class="max-w-7xl mx-auto px-4 py-8">
      <div class="bg-white rounded-lg shadow">
        <div class="p-6">
          <table class="w-full">
            <thead>
              <tr class="text-left border-b">
                <th class="pb-3">Contact</th>
                <th class="pb-3">Dispensary</th>
                <th class="pb-3">Message</th>
                <th class="pb-3">Source</th>
                <th class="pb-3">Date</th>
                <th class="pb-3">Status</th>
                <th class="pb-3">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% leads.forEach(lead => { %>
                <tr class="border-b hover:bg-gray-50">
                  <td class="py-3">
                    <div class="font-semibold"><%= lead.contact_name %></div>
                    <div class="text-sm text-gray-600"><%= lead.email %></div>
                    <% if (lead.phone) { %>
                      <div class="text-sm text-gray-600"><%= lead.phone %></div>
                    <% } %>
                  </td>
                  <td class="py-3"><%= lead.dispensary_name || 'N/A' %></td>
                  <td class="py-3">
                    <div class="max-w-xs truncate text-sm text-gray-600">
                      <%= lead.message || 'No message' %>
                    </div>
                  </td>
                  <td class="py-3">
                    <span class="px-2 py-1 bg-gray-100 rounded text-xs"><%= lead.source %></span>
                  </td>
                  <td class="py-3 text-sm text-gray-600">
                    <%= new Date(lead.created_at).toLocaleDateString() %>
                  </td>
                  <td class="py-3">
                    <span class="px-2 py-1 rounded text-xs <%= lead.is_contacted ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                      <%= lead.is_contacted ? 'Contacted' : 'New' %>
                    </span>
                  </td>
                  <td class="py-3">
                    <% if (!lead.is_contacted) { %>
                      <button onclick="markContacted(<%= lead.id %>)"
                              class="text-green-600 hover:text-green-700 text-sm">
                        Mark Contacted
                      </button>
                    <% } %>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <script>
  async function markContacted(leadId) {
    try {
      const response = await fetch(`/admin/lead/${leadId}/contacted`, {
        method: 'POST'
      });

      const data = await response.json();

      if (data.success) {
        location.reload();
      } else {
        alert('Error updating lead');
      }
    } catch (error) {
      alert('Error: ' + error.message);
    }
  }
  </script>
</body>
</html>
