          <strong>Dispensary Owners:</strong> Get Custom Branded Merchandise from MunchMakers
        </a>
        <span>‚Ä¢</span>
        <span class="text-green-100">No Minimums ‚Ä¢ Fast Turnaround</span>
      </div>
    </div>
  </div>
</header>

<script>
function toggleMobileMenu() {
  const menu = document.getElementById('mobileMenu');
  menu.classList.toggle('hidden');
}

// Load user navigation
async function loadUserNav() {
  try {
    const response = await fetch('/auth/me');
    const data = await response.json();

    const userNavEl = document.getElementById('user-nav');
    if (data.success && data.user) {
      userNavEl.innerHTML = `
        <div class="flex items-center gap-2">
          <a href="/account" class="text-gray-700 hover:text-green-600 font-medium">${data.user.name}</a>
          <button onclick="logout()" class="text-sm text-gray-500 hover:text-gray-700">Logout</button>
        </div>
      `;
    } else {
      userNavEl.innerHTML = `
        <div class="flex items-center gap-2">
          <a href="/login" class="text-gray-700 hover:text-green-600 font-medium">Login</a>
          <a href="/register" class="bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 font-medium">Sign Up</a>
        </div>
      `;
    }
  } catch (error) {
    console.error('Error loading user nav:', error);
  }
}

async function logout() {
  try {
    await fetch('/auth/logout', { method: 'POST' });
    window.location.reload();
  } catch (error) {
    console.error('Error logging out:', error);
  }
}

document.addEventListener('DOMContentLoaded', loadUserNav);
</script>
