<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%- include('partials/favicon') %>
  <title><%= title %></title>
  <meta name="description" content="<%= meta.description %>">
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <style>body { font-family: 'Inter', sans-serif; }</style>

  <!-- Google Maps -->
  <script src="/js/map.js"></script>
  <script async defer src="https://maps.googleapis.com/maps/api/js?key=<%= typeof GOOGLE_API_KEY !== 'undefined' ? GOOGLE_API_KEY : 'AIzaSyCd_kX94LwunGDgupq3eIj9p-RJ3YVi4Tw' %>"></script>
</head>
<body class="bg-gray-50">
  <%- include('partials/header') %>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Breadcrumb -->
    <nav class="mb-6 text-sm text-gray-600">
      <a href="/" class="hover:text-green-600">Home</a>
      <span class="mx-2">/</span>
      <a href="/dispensaries/<%= county.state_slug %>" class="hover:text-green-600"><%= county.state_name %></a>
      <span class="mx-2">/</span>
      <span class="text-gray-900"><%= county.name %> County</span>
    </nav>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <div class="lg:col-span-2">
        <div class="flex justify-between items-start mb-4">
          <h1 class="text-4xl font-bold text-gray-900">
            <% if (showAll) { %>
              All <%= rankings.length %> Dispensaries in <%= county.name %> County
            <% } else { %>
              Top Dispensaries in <%= county.name %> County, <%= county.state_abbr %> (2026)
            <% } %>
          </h1>
          <% if (!showAll && stats.dispensary_count > 50) { %>
            <a href="?view=all" class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition font-semibold whitespace-nowrap">
              View All <%= stats.dispensary_count %> â†’
            </a>
          <% } %>
        </div>

        <div class="flex items-center gap-4 mb-8 text-gray-600">
          <div>ğŸ“… Updated <%= new Date().toLocaleDateString() %></div>
          <div>â€¢</div>
          <div>ğŸ“Š <%= stats.dispensary_count || 0 %> dispensaries</div>
        </div>

        <% if (showAll) { %>
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
            <p class="text-sm">
              <a href="?" class="text-blue-600 hover:underline">â† Back to Top Rankings</a>
              <span class="mx-2">â€¢</span>
              Showing all <%= rankings.length %> dispensaries
            </p>
          </div>
        <% } %>

        <!-- Interactive Map -->
        <% if (rankings.length > 0) { %>
          <div class="bg-white rounded-lg shadow-lg p-4 mb-8">
            <h2 class="text-xl font-bold mb-4">Map View</h2>
            <div id="map" class="w-full h-96 rounded-lg bg-gray-100"></div>
          </div>
        <% } %>

        <div class="space-y-4 mb-12">
          <% rankings.forEach((dispensary, index) => { %>
            <div class="bg-white rounded-lg shadow-md border border-gray-200 p-6">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 text-center">
                  <div class="text-3xl font-bold text-gray-400">#<%= dispensary.rank %></div>
                  <% if (index === 0) { %><div class="text-2xl">ğŸ¥‡</div><% } %>
                  <% if (index === 1) { %><div class="text-2xl">ğŸ¥ˆ</div><% } %>
                  <% if (index === 2) { %><div class="text-2xl">ğŸ¥‰</div><% } %>
                </div>

                <!-- Logo -->
                <% if (dispensary.logo_url) { %>
                  <img src="<%= dispensary.logo_url %>" alt="<%= dispensary.name %>" class="w-20 h-20 object-cover rounded-lg flex-shrink-0">
                <% } %>

                <div class="flex-grow">
                  <h3 class="text-xl font-bold text-gray-900 mb-2">
                    <a href="/dispensary/<%= dispensary.slug %>" class="hover:text-green-600">
                      <%= dispensary.name %>
                    </a>
                  </h3>

                  <div class="text-gray-600 mb-3">
                    <div>ğŸ“ <%= dispensary.address_street %>, <%= dispensary.city %></div>
                    <% if (dispensary.phone) { %><div>ğŸ“ <%= dispensary.phone %></div><% } %>
                  </div>

                  <div class="flex items-center gap-4 mb-3">
                    <div class="flex items-center gap-1">
                      <span class="text-yellow-500">â­</span>
                      <span class="font-semibold"><%= dispensary.google_rating || 'N/A' %></span>
                      <span class="text-gray-500 text-sm">(<%= dispensary.google_review_count || 0 %>)</span>
                    </div>
                    <div class="text-green-600 font-semibold">Score: <%= dispensary.composite_score %></div>
                  </div>

                  <div class="flex items-center gap-4">
                    <%- include('partials/voteWidget', {
                      dispensary: dispensary,
                      votes: dispensary.votes,
                      recentVotes: dispensary.recentVotes,
                      canVote: dispensary.canVote
                    }) %>
                    <a href="/dispensary/<%= dispensary.slug %>" class="text-green-600 hover:text-green-700 font-medium">
                      View Details â†’
                    </a>
                  </div>
                </div>
              </div>
            </div>
          <% }); %>
        </div>

        <!-- About Section -->
        <div class="bg-white rounded-lg shadow p-6 mb-8">
          <h2 class="text-2xl font-bold mb-4">Cannabis Dispensaries in <%= county.name %> County</h2>
          <div class="prose max-w-none text-gray-700 space-y-3">
            <p>
              <%= county.name %> County features <%= dispensaries.length %> cannabis dispensaries
              <% if (stats.avg_rating) { %>
                with an average rating of <%= Number(stats.avg_rating).toFixed(1) %> stars
              <% } %>.
              Our community-driven rankings help you find the best dispensaries based on verified customer reviews,
              ratings, and local feedback.
            </p>
            <p>
              Whether you're looking for medical marijuana or recreational cannabis, <%= county.name %> County dispensaries
              offer a wide selection of products including flower, concentrates, edibles, vapes, and more. Many locations
              provide convenient services like online ordering, curbside pickup, and delivery.
            </p>
          </div>
        </div>

        <!-- Quick Tips -->
        <div class="bg-green-50 border border-green-200 rounded-lg p-6 mb-8">
          <h3 class="text-xl font-bold mb-4">Tips for Visiting Dispensaries in <%= county.name %> County</h3>
          <ul class="space-y-2 text-gray-700">
            <li class="flex items-start gap-2">
              <span class="text-green-600 font-bold">âœ“</span>
              <span>Check dispensary hours and whether they accept walk-ins or require appointments</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-green-600 font-bold">âœ“</span>
              <span>Compare prices and deals across multiple dispensaries in <%= county.name %> County</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-green-600 font-bold">âœ“</span>
              <span>Read reviews to learn about product quality, staff helpfulness, and store atmosphere</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-green-600 font-bold">âœ“</span>
              <span>Ask budtenders for recommendations based on your experience level and desired effects</span>
            </li>
            <li class="flex items-start gap-2">
              <span class="text-green-600 font-bold">âœ“</span>
              <span>Join loyalty programs to earn rewards and receive exclusive deals</span>
            </li>
          </ul>
        </div>

        <!-- Related Counties -->
        <% if (nearbyCounties && nearbyCounties.length > 0) { %>
        <div class="bg-white rounded-lg shadow p-6 mb-8">
          <h3 class="text-xl font-bold mb-4">Dispensaries in Nearby Counties</h3>
          <div class="grid grid-cols-1 gap-2">
            <% nearbyCounties.slice(0, 5).forEach(nc => { %>
              <a href="/dispensaries/<%= county.state_slug %>/<%= nc.slug %>"
                 class="block p-3 bg-gray-50 rounded hover:bg-green-50 hover:text-green-600 transition">
                <div class="font-semibold"><%= nc.name %> County</div>
                <div class="text-sm text-gray-500"><%= nc.dispensary_count || 0 %> dispensaries</div>
              </a>
            <% }); %>
          </div>
        </div>
        <% } %>
      </div>

      <div class="lg:col-span-1">
        <!-- Sidebar content removed for cleaner UX -->
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script>
    // Initialize map when page loads
    window.addEventListener('load', function() {
      if (typeof initCountyMap !== 'undefined') {
        initCountyMap('<%= county.state_slug %>', '<%= county.slug %>');
      }
    });
  </script>
</body>
</html>
