<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%- include('partials/favicon') %>
  <title>Search Dispensaries - Top Dispensaries 2026</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <style>body { font-family: 'Inter', sans-serif; }</style>
</head>
<body class="bg-gray-50">
  <%- include('partials/header') %>

  <main class="container mx-auto px-4 py-8">
    <!-- Search Header -->
    <div class="max-w-4xl mx-auto mb-8">
      <h1 class="text-4xl font-bold mb-6 text-center">Search Dispensaries</h1>

      <!-- Search Input -->
      <div class="bg-white rounded-lg shadow-lg p-6">
        <div class="relative">
          <input
            type="text"
            id="search-input"
            placeholder="Search by dispensary name, city, or state..."
            class="w-full px-6 py-4 text-lg border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500"
            autocomplete="off"
          >
          <div class="absolute right-4 top-4">
            <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
        </div>

        <!-- Filters -->
        <div class="mt-4 flex flex-wrap gap-4">
          <select id="state-filter" class="px-4 py-2 border border-gray-300 rounded-lg">
            <option value="">All States</option>
          </select>
          <select id="rating-filter" class="px-4 py-2 border border-gray-300 rounded-lg">
            <option value="">Any Rating</option>
            <option value="4.5">4.5+ Stars</option>
            <option value="4.0">4.0+ Stars</option>
            <option value="3.5">3.5+ Stars</option>
          </select>
        </div>
      </div>
    </div>

    <!-- Results -->
    <div class="max-w-6xl mx-auto">
      <div id="results-count" class="mb-6 text-lg text-gray-600"></div>

      <div id="search-results" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Results populated by JavaScript -->
      </div>

      <div id="no-results" class="hidden text-center py-12">
        <p class="text-xl text-gray-600">No dispensaries found</p>
        <p class="text-sm text-gray-500 mt-2">Try a different search term or filter</p>
      </div>
    </div>
  </main>

  <%- include('partials/footer') %>
  <script>
    let allDispensaries = [];
    let filteredResults = [];

    // Load all dispensaries
    async function loadDispensaries() {
      try {
        const response = await fetch('/api/dispensaries/all');
        const data = await response.json();
        allDispensaries = data.dispensaries || [];

        // Populate state filter
        const states = [...new Set(allDispensaries.map(d => d.state_name || d.state_abbr))].sort();
        const stateFilter = document.getElementById('state-filter');
        states.forEach(state => {
          if (state) {
            const option = document.createElement('option');
            option.value = state;
            option.textContent = state;
            stateFilter.appendChild(option);
          }
        });

        performSearch();
      } catch (error) {
        console.error('Error loading dispensaries:', error);
      }
    }

    function performSearch() {
      const searchTerm = document.getElementById('search-input').value.toLowerCase();
      const stateFilter = document.getElementById('state-filter').value;
      const ratingFilter = parseFloat(document.getElementById('rating-filter').value);

      filteredResults = allDispensaries.filter(d => {
        // Text search
        const matchesSearch = !searchTerm ||
          d.name.toLowerCase().includes(searchTerm) ||
          (d.city && d.city.toLowerCase().includes(searchTerm)) ||
          (d.state_name && d.state_name.toLowerCase().includes(searchTerm)) ||
          (d.state_abbr && d.state_abbr.toLowerCase().includes(searchTerm));

        // State filter
        const matchesState = !stateFilter ||
          d.state_name === stateFilter ||
          d.state_abbr === stateFilter;

        // Rating filter
        const matchesRating = !ratingFilter ||
          (d.google_rating && parseFloat(d.google_rating) >= ratingFilter);

        return matchesSearch && matchesState && matchesRating;
      });

      displayResults(filteredResults);
    }

    function displayResults(results) {
      const container = document.getElementById('search-results');
      const countEl = document.getElementById('results-count');
      const noResults = document.getElementById('no-results');

      container.innerHTML = '';

      if (results.length === 0) {
        noResults.classList.remove('hidden');
        countEl.textContent = '';
        return;
      }

      noResults.classList.add('hidden');
      countEl.textContent = `Found ${results.length} dispensaries`;

      results.slice(0, 50).forEach(disp => {
        const card = document.createElement('div');
        card.className = 'bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition';

        card.innerHTML = `
          <div class="flex items-start gap-3 mb-3">
            ${disp.logo_url ? `<img src="${disp.logo_url}" alt="${disp.name}" class="w-14 h-14 object-cover rounded-lg flex-shrink-0">` : ''}
            <div class="flex-1">
              <h3 class="text-lg font-bold mb-1">
                <a href="/dispensary/${disp.slug}" class="hover:text-green-600">${disp.name}</a>
              </h3>
              <p class="text-sm text-gray-600">${disp.city || ''}, ${disp.state_abbr || disp.state_name || ''}</p>
            </div>
          </div>

          ${disp.google_rating ? `
            <div class="flex items-center gap-2 mb-3">
              <span class="text-yellow-500">â˜…</span>
              <span class="font-semibold">${Number(disp.google_rating).toFixed(1)}/5</span>
              ${disp.google_review_count ? `<span class="text-sm text-gray-500">(${disp.google_review_count})</span>` : ''}
            </div>
          ` : ''}

          <a href="/dispensary/${disp.slug}" class="inline-block w-full text-center bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 text-sm font-medium">
            View Details
          </a>
        `;

        container.appendChild(card);
      });

      if (results.length > 50) {
        const more = document.createElement('div');
        more.className = 'col-span-full text-center py-4 text-gray-600';
        more.textContent = `Showing first 50 of ${results.length} results. Refine your search to see more.`;
        container.appendChild(more);
      }
    }

    // Event listeners
    document.getElementById('search-input').addEventListener('input', performSearch);
    document.getElementById('state-filter').addEventListener('change', performSearch);
    document.getElementById('rating-filter').addEventListener('change', performSearch);

    // Initial load
    loadDispensaries();
  </script>
</body>
</html>
