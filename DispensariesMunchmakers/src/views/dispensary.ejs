<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%- include('partials/favicon') %>
  <%- include('partials/analytics') %>
  <title><%= title %></title>
  <meta name="description" content="<%= meta.description %>">
  <meta name="keywords" content="<%= meta.keywords %>">
  <link rel="canonical" href="<%= baseUrl %>/dispensary/<%= dispensary.slug %>">

  <!-- Open Graph -->
  <meta property="og:title" content="<%= title %>">
  <meta property="og:description" content="<%= meta.description %>">
  <meta property="og:image" content="<%= dispensary.logo_url || 'https://cdn11.bigcommerce.com/s-tqjrceegho/images/stencil/500w/munchmakers-logo_1_1752112946__55141.original.png' %>">
  <meta property="og:url" content="<%= baseUrl %>/dispensary/<%= dispensary.slug %>">

  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <style>body { font-family: 'Inter', sans-serif; }</style>

  <!-- Schema.org Structured Data -->
  <% if (schemas) { %>
    <script type="application/ld+json"><%- JSON.stringify(schemas.business) %></script>
    <script type="application/ld+json"><%- JSON.stringify(schemas.breadcrumb) %></script>
    <% if (schemas.reviews && schemas.reviews.length > 0) { %>
      <% schemas.reviews.forEach(reviewSchema => { %>
        <script type="application/ld+json"><%- JSON.stringify(reviewSchema) %></script>
      <% }); %>
    <% } %>
  <% } %>
</head>
<body class="bg-gray-50">
  <%- include('partials/header') %>

  <main class="container mx-auto px-4 py-8 max-w-7xl">
    <!-- Breadcrumb -->
    <nav class="mb-6 text-sm text-gray-600">
      <a href="/" class="hover:text-green-600">Home</a>
      <span class="mx-2">/</span>
      <a href="/dispensaries/<%= dispensary.state_slug %>" class="hover:text-green-600"><%= dispensary.state_name %></a>
      <% if (dispensary.county_name) { %>
        <span class="mx-2">/</span>
        <a href="/dispensaries/<%= dispensary.state_slug %>/<%= dispensary.county_slug %>" class="hover:text-green-600"><%= dispensary.county_name %> County</a>
      <% } %>
      <span class="mx-2">/</span>
      <span class="text-gray-900"><%= dispensary.name %></span>
    </nav>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2">
        <!-- Header Card -->
        <div class="bg-white rounded-lg shadow-lg p-4 sm:p-6 md:p-8 mb-6">
          <div class="flex flex-col sm:flex-row items-start gap-4 sm:gap-6">
            <% if (dispensary.logo_url) { %>
              <img src="<%= dispensary.logo_url %>" alt="<%= dispensary.name %>" class="w-20 h-20 sm:w-28 sm:h-28 md:w-32 md:h-32 object-cover rounded-lg mx-auto sm:mx-0">
            <% } %>
            <div class="flex-1 w-full">
              <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-3 mb-3">
                <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold"><%= dispensary.name %></h1>

                <!-- Social Sharing -->
                <div class="flex gap-2 flex-shrink-0">
                  <button onclick="shareOnFacebook()" class="p-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition" title="Share on Facebook">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
                  </button>
                  <button onclick="shareOnTwitter()" class="p-2 bg-sky-500 hover:bg-sky-600 text-white rounded-lg transition" title="Share on Twitter">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/></svg>
                  </button>
                  <button onclick="copyLink()" class="p-2 bg-gray-600 hover:bg-gray-700 text-white rounded-lg transition" title="Copy Link">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path></svg>
                  </button>
                </div>
              </div>

              <% if (dispensary.google_rating) { %>
                <div class="flex flex-wrap items-center mb-4">
                  <span class="text-yellow-500 text-2xl sm:text-3xl mr-2">★</span>
                  <span class="text-2xl sm:text-3xl font-bold"><%= Number(dispensary.google_rating).toFixed(1) %></span>
                  <span class="text-gray-600 text-lg sm:text-xl ml-2">/ 5</span>
                  <span class="text-gray-500 text-sm sm:text-base ml-3">(<%= dispensary.google_review_count || 0 %> reviews)</span>
                </div>
              <% } %>

              <!-- Rankings -->
              <% if (rankings && rankings.length > 0) { %>
                <div class="flex flex-wrap gap-2 mb-4">
                  <% rankings.forEach(r => { %>
                    <span class="inline-flex items-center px-3 py-1 bg-green-100 text-green-800 text-sm font-medium rounded-full">
                      #<%= r.rank %> in <%= r.location_name %><% if (r.location_type === 'county') { %> County<% } %>
                      <span class="ml-1 text-green-600 text-xs">(of <%= r.total_in_location %>)</span>
                    </span>
                  <% }); %>
                </div>
              <% } %>

              <!-- Tags -->
              <% if (tags && tags.length > 0) { %>
                <div class="flex flex-wrap gap-2 mb-4">
                  <% tags.forEach(tag => { %>
                    <span class="px-2 py-1 bg-gray-100 text-gray-700 text-xs rounded-full"><%= tag %></span>
                  <% }); %>
                </div>
              <% } %>

              <div class="space-y-2 text-gray-700">
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <%= dispensary.address_street %><br>
                  <%= dispensary.city %>, <%= dispensary.state_abbr %> <%= dispensary.zip %>
                </div>

                <% if (dispensary.phone) { %>
                  <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                    <a href="tel:<%= dispensary.phone %>" class="text-blue-600 hover:underline" data-track="phone" data-dispensary-id="<%= dispensary.id %>"><%= dispensary.phone %></a>
                  </div>
                <% } %>

                <% if (dispensary.website) { %>
                  <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                    </svg>
                    <a href="<%= dispensary.website %>" target="_blank" rel="nofollow noopener" class="text-blue-600 hover:underline" data-track="website" data-dispensary-id="<%= dispensary.id %>">Visit Website →</a>
                  </div>
                <% } %>

                <%
                  // Parse hours - handle both string and object formats
                  let hoursObj = dispensary.hours;
                  if (typeof hoursObj === 'string') {
                    try { hoursObj = JSON.parse(hoursObj); } catch(e) { hoursObj = null; }
                  }
                  // Get weekday_text array
                  let weekdayTexts = null;
                  if (hoursObj && typeof hoursObj === 'object') {
                    if (Array.isArray(hoursObj.weekday_text)) {
                      weekdayTexts = hoursObj.weekday_text;
                    }
                  }
                  // isOpenNow is now calculated server-side in real-time
                %>
                <% if (weekdayTexts && weekdayTexts.length > 0) { %>
                  <div class="mt-4 pt-4 border-t border-gray-200">
                    <div class="flex items-center mb-2">
                      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                      <span class="font-semibold">Hours</span>
                      <% if (isOpenNow === true) { %>
                        <span class="ml-2 px-2 py-1 bg-green-100 text-green-800 text-xs font-semibold rounded">OPEN NOW</span>
                      <% } else if (isOpenNow === false) { %>
                        <span class="ml-2 px-2 py-1 bg-red-100 text-red-800 text-xs font-semibold rounded">CLOSED</span>
                      <% } %>
                    </div>
                    <div class="text-sm text-gray-600 ml-7">
                      <% for (let i = 0; i < weekdayTexts.length; i++) { %>
                        <div><%= weekdayTexts[i] %></div>
                      <% } %>
                    </div>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>

        <!-- Social Proof -->
        <%- include('partials/social-proof', { socialProof }) %>

        <!-- Vote Widget -->
        <%- include('partials/voteWidget', { dispensary, canVote, votes }) %>

        <!-- Photos -->
        <% if (dispensary.photos && dispensary.photos.length > 0) { %>
          <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
            <h2 class="text-2xl font-bold mb-4">Photos</h2>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
              <% dispensary.photos.forEach(photo => { %>
                <img src="<%= photo %>" alt="<%= dispensary.name %>" class="w-full h-48 object-cover rounded-lg">
              <% }); %>
            </div>
          </div>
        <% } %>

        <!-- External Listings -->
        <% if (dispensary.external_listings && (dispensary.external_listings.leafly || dispensary.external_listings.weedmaps)) { %>
          <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
            <h2 class="text-2xl font-bold mb-4">Find on Other Platforms</h2>
            <div class="flex gap-4">
              <% if (dispensary.external_listings.leafly) { %>
                <a href="<%= dispensary.external_listings.leafly.url %>" target="_blank" rel="nofollow noopener" class="flex-1 bg-green-50 border-2 border-green-600 rounded-lg p-4 hover:bg-green-100 transition">
                  <div class="font-bold text-green-700">Leafly</div>
                  <div class="text-sm text-gray-600"><%= dispensary.external_listings.leafly.title %></div>
                </a>
              <% } %>
              <% if (dispensary.external_listings.weedmaps) { %>
                <a href="<%= dispensary.external_listings.weedmaps.url %>" target="_blank" rel="nofollow noopener" class="flex-1 bg-orange-50 border-2 border-orange-600 rounded-lg p-4 hover:bg-orange-100 transition">
                  <div class="font-bold text-orange-700">Weedmaps</div>
                  <div class="text-sm text-gray-600"><%= dispensary.external_listings.weedmaps.title %></div>
                </a>
              <% } %>
            </div>
          </div>
        <% } %>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1">
      </div>
    </div>

    <!-- Reviews Section -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Reviews List (2/3 width) -->
        <div class="lg:col-span-2">
          <%- include('partials/reviewList', { dispensary }) %>
        </div>

        <!-- Review Form (1/3 width) -->
        <div class="lg:col-span-1">
          <%- include('partials/reviewForm', { dispensary }) %>
        </div>
      </div>
    </div>
  </main>

  <%- include('partials/footer') %>
  <script src="/js/main.js"></script>
  <script>
    // Social sharing functions
    function shareOnFacebook() {
      const url = encodeURIComponent(window.location.href);
      window.open(`https://www.facebook.com/sharer/sharer.php?u=${url}`, '_blank', 'width=600,height=400');
    }

    function shareOnTwitter() {
      const url = encodeURIComponent(window.location.href);
      const text = encodeURIComponent('Check out <%= dispensary.name %> - <%= dispensary.city %>, <%= dispensary.state_abbr %>');
      window.open(`https://twitter.com/intent/tweet?url=${url}&text=${text}`, '_blank', 'width=600,height=400');
    }

    async function copyLink() {
      try {
        await navigator.clipboard.writeText(window.location.href);
        alert('Link copied to clipboard!');
      } catch (err) {
        const input = document.createElement('input');
        input.value = window.location.href;
        document.body.appendChild(input);
        input.select();
        document.execCommand('copy');
        document.body.removeChild(input);
        alert('Link copied to clipboard!');
      }
    }

    // Click tracking for phone and website links
    document.querySelectorAll('[data-track]').forEach(el => {
      el.addEventListener('click', function() {
        const eventType = this.dataset.track;
        const dispensaryId = this.dataset.dispensaryId;

        // Send tracking request (fire and forget)
        fetch('/api/track/click', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ dispensaryId: parseInt(dispensaryId), eventType })
        }).catch(() => {}); // Silently ignore errors
      });
    });
  </script>

  <!-- Reviews functionality -->
  <script src="/js/reviews.js"></script>
</body>
</html>
 
