<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <meta name="description" content="<%= meta.description %>">
  <meta name="keywords" content="<%= meta.keywords %>">
  <link rel="canonical" href="<%= baseUrl %>/dispensary/<%= dispensary.slug %>">

  <!-- Open Graph -->
  <meta property="og:title" content="<%= title %>">
  <meta property="og:description" content="<%= meta.description %>">
  <meta property="og:image" content="<%= dispensary.logo_url || 'https://cdn11.bigcommerce.com/s-tqjrceegho/images/stencil/500w/munchmakers-logo_1_1752112946__55141.original.png' %>">
  <meta property="og:url" content="<%= baseUrl %>/dispensary/<%= dispensary.slug %>">

  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <style>body { font-family: 'Inter', sans-serif; }</style>
</head>
<body class="bg-gray-50">
  <%- include('partials/header') %>

  <main class="container mx-auto px-4 py-8 max-w-7xl">
    <!-- Breadcrumb -->
    <nav class="mb-6 text-sm text-gray-600">
      <a href="/" class="hover:text-green-600">Home</a>
      <span class="mx-2">/</span>
      <a href="/dispensaries/<%= dispensary.state_slug %>" class="hover:text-green-600"><%= dispensary.state_name %></a>
      <% if (dispensary.county_name) { %>
        <span class="mx-2">/</span>
        <a href="/dispensaries/<%= dispensary.state_slug %>/<%= dispensary.county_slug %>" class="hover:text-green-600"><%= dispensary.county_name %> County</a>
      <% } %>
      <span class="mx-2">/</span>
      <span class="text-gray-900"><%= dispensary.name %></span>
    </nav>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content -->
      <div class="lg:col-span-2">
        <!-- Header Card -->
        <div class="bg-white rounded-lg shadow-lg p-8 mb-6">
          <div class="flex items-start gap-6">
            <% if (dispensary.logo_url) { %>
              <img src="<%= dispensary.logo_url %>" alt="<%= dispensary.name %>" class="w-32 h-32 object-cover rounded-lg">
            <% } %>
            <div class="flex-1">
              <h1 class="text-4xl font-bold mb-3"><%= dispensary.name %></h1>

              <% if (dispensary.google_rating) { %>
                <div class="flex items-center mb-4">
                  <span class="text-yellow-500 text-3xl mr-2">★</span>
                  <span class="text-3xl font-bold"><%= Number(dispensary.google_rating).toFixed(1) %></span>
                  <span class="text-gray-600 text-xl ml-2">/ 5</span>
                  <span class="text-gray-500 ml-3">(<%= dispensary.google_review_count || 0 %> reviews)</span>
                </div>
              <% } %>

              <div class="space-y-2 text-gray-700">
                <div class="flex items-center">
                  <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <%= dispensary.address_street %><br>
                  <%= dispensary.city %>, <%= dispensary.state_abbr %> <%= dispensary.zip %>
                </div>

                <% if (dispensary.phone) { %>
                  <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                    <a href="tel:<%= dispensary.phone %>" class="text-blue-600 hover:underline"><%= dispensary.phone %></a>
                  </div>
                <% } %>

                <% if (dispensary.website) { %>
                  <div class="flex items-center">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
                    </svg>
                    <a href="<%= dispensary.website %>" target="_blank" rel="noopener" class="text-blue-600 hover:underline">Visit Website →</a>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>

        <!-- Vote Widget -->
        <%- include('partials/voteWidget', { dispensary, canVote, votes }) %>

        <!-- Photos -->
        <% if (dispensary.photos && dispensary.photos.length > 0) { %>
          <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
            <h2 class="text-2xl font-bold mb-4">Photos</h2>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
              <% dispensary.photos.forEach(photo => { %>
                <img src="<%= photo %>" alt="<%= dispensary.name %>" class="w-full h-48 object-cover rounded-lg">
              <% }); %>
            </div>
          </div>
        <% } %>

        <!-- External Listings -->
        <% if (dispensary.external_listings && (dispensary.external_listings.leafly || dispensary.external_listings.weedmaps)) { %>
          <div class="bg-white rounded-lg shadow-lg p-6 mb-6">
            <h2 class="text-2xl font-bold mb-4">Find on Other Platforms</h2>
            <div class="flex gap-4">
              <% if (dispensary.external_listings.leafly) { %>
                <a href="<%= dispensary.external_listings.leafly.url %>" target="_blank" class="flex-1 bg-green-50 border-2 border-green-600 rounded-lg p-4 hover:bg-green-100 transition">
                  <div class="font-bold text-green-700">Leafly</div>
                  <div class="text-sm text-gray-600"><%= dispensary.external_listings.leafly.title %></div>
                </a>
              <% } %>
              <% if (dispensary.external_listings.weedmaps) { %>
                <a href="<%= dispensary.external_listings.weedmaps.url %>" target="_blank" class="flex-1 bg-orange-50 border-2 border-orange-600 rounded-lg p-4 hover:bg-orange-100 transition">
                  <div class="font-bold text-orange-700">Weedmaps</div>
                  <div class="text-sm text-gray-600"><%= dispensary.external_listings.weedmaps.title %></div>
                </a>
              <% } %>
            </div>
          </div>
        <% } %>
      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1">
        <%- include('partials/munchmakersAd') %>
        <%- include('partials/leadForm', { source: 'dispensary_page', dispensaryName: dispensary.name }) %>
      </div>
    </div>
  </main>

  <%- include('partials/footer') %>
  <script src="/js/main.js"></script>
</body>
</html>
