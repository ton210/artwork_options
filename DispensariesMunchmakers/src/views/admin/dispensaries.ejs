<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
  <div class="min-h-screen">
    <header class="bg-white shadow">
      <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
        <h1 class="text-2xl font-bold text-gray-900">Manage Dispensaries</h1>
        <div class="flex items-center gap-4">
          <a href="/admin" class="text-gray-600 hover:text-green-600">← Dashboard</a>
          <a href="/admin/logout" class="text-red-600 hover:text-red-700">Logout</a>
        </div>
      </div>
    </header>

    <div class="max-w-7xl mx-auto px-4 py-8">
      <div class="bg-white rounded-lg shadow">
        <div class="p-6">
          <table class="w-full">
            <thead>
              <tr class="text-left border-b">
                <th class="pb-3">Name</th>
                <th class="pb-3">Location</th>
                <th class="pb-3">Rating</th>
                <th class="pb-3">Reviews</th>
                <th class="pb-3">Status</th>
                <th class="pb-3">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% dispensaries.forEach(dispensary => { %>
                <tr class="border-b hover:bg-gray-50">
                  <td class="py-3">
                    <div class="font-semibold"><%= dispensary.name %></div>
                    <div class="text-sm text-gray-500"><%= dispensary.slug %></div>
                  </td>
                  <td class="py-3">
                    <div><%= dispensary.city %>, <%= dispensary.state_abbr %></div>
                    <div class="text-sm text-gray-500"><%= dispensary.county_name %> County</div>
                  </td>
                  <td class="py-3">
                    <span class="text-yellow-500">⭐</span> <%= dispensary.google_rating || 'N/A' %>
                  </td>
                  <td class="py-3"><%= dispensary.google_review_count || 0 %></td>
                  <td class="py-3">
                    <span class="px-2 py-1 rounded text-xs <%= dispensary.is_active ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                      <%= dispensary.is_active ? 'Active' : 'Inactive' %>
                    </span>
                  </td>
                  <td class="py-3">
                    <div class="flex gap-2">
                      <a href="/dispensary/<%= dispensary.slug %>" target="_blank"
                         class="text-blue-600 hover:text-blue-700 text-sm">View</a>
                      <a href="/admin/dispensary/<%= dispensary.id %>/edit"
                         class="text-green-600 hover:text-green-700 text-sm">Edit</a>
                      <form method="POST" action="/admin/dispensary/<%= dispensary.id %>/delete"
                            onsubmit="return confirm('Are you sure?')" class="inline">
                        <button type="submit" class="text-red-600 hover:text-red-700 text-sm">Delete</button>
                      </form>
                    </div>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <div class="px-6 py-4 border-t flex justify-between items-center">
          <div class="text-gray-600">
            Page <%= currentPage %> of <%= totalPages %>
          </div>
          <div class="flex gap-2">
            <% if (currentPage > 1) { %>
              <a href="?page=<%= currentPage - 1 %>"
                 class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300">Previous</a>
            <% } %>
            <% if (currentPage < totalPages) { %>
              <a href="?page=<%= currentPage + 1 %>"
                 class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300">Next</a>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
