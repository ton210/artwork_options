<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
  <div class="min-h-screen">
    <!-- Header -->
    <header class="bg-white shadow">
      <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
        <h1 class="text-2xl font-bold text-gray-900">Admin Dashboard</h1>
        <div class="flex items-center gap-4">
          <a href="/" class="text-gray-600 hover:text-green-600">View Site</a>
          <a href="/admin/logout" class="text-red-600 hover:text-red-700">Logout</a>
        </div>
      </div>
    </header>

    <div class="max-w-7xl mx-auto px-4 py-8">
      <!-- Stats Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow p-6">
          <div class="text-gray-500 text-sm mb-1">Total Dispensaries</div>
          <div class="text-3xl font-bold text-gray-900"><%= stats.total_dispensaries %></div>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
          <div class="text-gray-500 text-sm mb-1">US Views Today</div>
          <div class="text-3xl font-bold text-blue-600"><%= stats.views_today_us || 0 %></div>
          <div class="text-xs text-gray-500 mt-1">(<%= stats.views_today_all || 0 %> total)</div>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
          <div class="text-gray-500 text-sm mb-1">Votes Today</div>
          <div class="text-3xl font-bold text-green-600"><%= stats.votes_today %></div>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
          <div class="text-gray-500 text-sm mb-1">Uncontacted Leads</div>
          <div class="text-3xl font-bold text-orange-600"><%= stats.uncontacted_leads %></div>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
          <div class="text-gray-500 text-sm mb-1">Total Users</div>
          <div class="text-3xl font-bold text-purple-600"><%= stats.total_users || 0 %></div>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
          <div class="text-gray-500 text-sm mb-1">Total Reviews</div>
          <div class="text-3xl font-bold text-indigo-600"><%= stats.total_reviews || 0 %></div>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
          <div class="text-gray-500 text-sm mb-1">Pending Claims</div>
          <div class="text-3xl font-bold text-red-600"><%= stats.pending_claims || 0 %></div>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
          <div class="text-gray-500 text-sm mb-1">States / Counties</div>
          <div class="text-3xl font-bold text-gray-900"><%= stats.total_states %> / <%= stats.total_counties %></div>
        </div>
      </div>

      <!-- Click Stats Row -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-blue-500">
          <div class="text-gray-500 text-sm mb-1">Clicks Today</div>
          <div class="text-3xl font-bold text-blue-600"><%= clickStats?.clicks_today || 0 %></div>
        </div>
        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-green-500">
          <div class="text-gray-500 text-sm mb-1">Website Clicks Today</div>
          <div class="text-3xl font-bold text-green-600"><%= clickStats?.website_clicks_today || 0 %></div>
        </div>
        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-yellow-500">
          <div class="text-gray-500 text-sm mb-1">Phone Clicks Today</div>
          <div class="text-3xl font-bold text-yellow-600"><%= clickStats?.phone_clicks_today || 0 %></div>
        </div>
        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-purple-500">
          <div class="text-gray-500 text-sm mb-1">Clicks (30 Days)</div>
          <div class="text-3xl font-bold text-purple-600"><%= clickStats?.clicks_month || 0 %></div>
        </div>
      </div>

      <!-- Analytics Section -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <!-- Daily Stats -->
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-xl font-bold mb-4">Daily Stats (US Visitors - Last 7 Days)</h2>
          <table class="w-full text-sm">
            <thead>
              <tr class="text-left border-b">
                <th class="pb-2">Date</th>
                <th class="pb-2">Views</th>
                <th class="pb-2">Unique Visitors</th>
              </tr>
            </thead>
            <tbody>
              <% (dailyStats || []).forEach(day => { %>
                <tr class="border-b">
                  <td class="py-2"><%= new Date(day.date).toLocaleDateString() %></td>
                  <td class="py-2"><%= day.view_count %></td>
                  <td class="py-2"><%= day.unique_visitors %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>

        <!-- Traffic by Country -->
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-xl font-bold mb-4">Traffic by Country (Last 30 Days)</h2>
          <table class="w-full text-sm">
            <thead>
              <tr class="text-left border-b">
                <th class="pb-2">Country</th>
                <th class="pb-2">Views</th>
                <th class="pb-2">%</th>
              </tr>
            </thead>
            <tbody>
              <% (trafficByCountry || []).forEach(country => { %>
                <tr class="border-b">
                  <td class="py-2 font-semibold"><%= country.country %></td>
                  <td class="py-2"><%= country.view_count %></td>
                  <td class="py-2"><%= country.percentage %>%</td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Last 24 Hours Section -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <!-- Top Dispensaries 24h -->
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-xl font-bold mb-4">Top Dispensaries (Last 24 Hours)</h2>
          <table class="w-full text-sm">
            <thead>
              <tr class="text-left border-b">
                <th class="pb-2">Dispensary</th>
                <th class="pb-2">Views</th>
                <th class="pb-2">Unique</th>
              </tr>
            </thead>
            <tbody>
              <% (topDispensaries24h || []).forEach(disp => { %>
                <tr class="border-b hover:bg-gray-50">
                  <td class="py-2">
                    <a href="/dispensary/<%= disp.slug %>" class="text-blue-600 hover:underline font-medium" target="_blank">
                      <%= disp.name %>
                    </a>
                    <div class="text-xs text-gray-500"><%= disp.city %>, <%= disp.state_abbr %></div>
                  </td>
                  <td class="py-2"><%= disp.view_count %></td>
                  <td class="py-2"><%= disp.unique_visitors %></td>
                </tr>
              <% }); %>
              <% if (!topDispensaries24h || topDispensaries24h.length === 0) { %>
                <tr><td colspan="3" class="py-2 text-gray-500">No data in the last 24 hours</td></tr>
              <% } %>
            </tbody>
          </table>
        </div>

        <!-- Top States 24h -->
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-xl font-bold mb-4">Top States (Last 24 Hours)</h2>
          <table class="w-full text-sm">
            <thead>
              <tr class="text-left border-b">
                <th class="pb-2">State</th>
                <th class="pb-2">Views</th>
                <th class="pb-2">Unique</th>
              </tr>
            </thead>
            <tbody>
              <% (topStates24h || []).forEach(state => { %>
                <tr class="border-b hover:bg-gray-50">
                  <td class="py-2">
                    <a href="/dispensaries/<%= state.state_slug %>" class="text-blue-600 hover:underline font-medium" target="_blank">
                      <%= state.state_name %>
                    </a>
                  </td>
                  <td class="py-2"><%= state.view_count %></td>
                  <td class="py-2"><%= state.unique_visitors %></td>
                </tr>
              <% }); %>
              <% if (!topStates24h || topStates24h.length === 0) { %>
                <tr><td colspan="3" class="py-2 text-gray-500">No data in the last 24 hours</td></tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Top Clicked Dispensaries -->
      <div class="bg-white rounded-lg shadow p-6 mb-8">
        <h2 class="text-xl font-bold mb-4">Top Clicked Dispensaries (Last 7 Days)</h2>
        <table class="w-full text-sm">
          <thead>
            <tr class="text-left border-b">
              <th class="pb-2">Dispensary</th>
              <th class="pb-2">Website</th>
              <th class="pb-2">Phone</th>
              <th class="pb-2">Total</th>
            </tr>
          </thead>
          <tbody>
            <% (topClickedDispensaries || []).forEach(disp => { %>
              <tr class="border-b hover:bg-gray-50">
                <td class="py-2">
                  <a href="/dispensary/<%= disp.slug %>" class="text-blue-600 hover:underline font-medium" target="_blank">
                    <%= disp.name %>
                  </a>
                  <div class="text-xs text-gray-500"><%= disp.city %>, <%= disp.state_abbr %></div>
                </td>
                <td class="py-2 text-green-600"><%= disp.website_clicks %></td>
                <td class="py-2 text-yellow-600"><%= disp.phone_clicks %></td>
                <td class="py-2 font-bold"><%= disp.total_clicks %></td>
              </tr>
            <% }); %>
            <% if (!topClickedDispensaries || topClickedDispensaries.length === 0) { %>
              <tr><td colspan="4" class="py-2 text-gray-500">No click data yet</td></tr>
            <% } %>
          </tbody>
        </table>
      </div>

      <!-- Top Pages & Dispensaries -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <!-- Top Pages -->
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-xl font-bold mb-4">Top Pages (US Visitors - Last 30 Days)</h2>
          <table class="w-full text-sm">
            <thead>
              <tr class="text-left border-b">
                <th class="pb-2">URL</th>
                <th class="pb-2">Views</th>
                <th class="pb-2">Unique</th>
              </tr>
            </thead>
            <tbody>
              <% (topPages || []).forEach(page => { %>
                <tr class="border-b hover:bg-gray-50">
                  <td class="py-2 max-w-xs truncate"><a href="<%= page.url_path %>" class="text-blue-600 hover:underline" target="_blank"><%= page.url_path %></a></td>
                  <td class="py-2"><%= page.view_count %></td>
                  <td class="py-2"><%= page.unique_visitors %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>

        <!-- Top Dispensaries -->
        <div class="bg-white rounded-lg shadow p-6">
          <h2 class="text-xl font-bold mb-4">Top Dispensaries (US Visitors - Last 30 Days)</h2>
          <table class="w-full text-sm">
            <thead>
              <tr class="text-left border-b">
                <th class="pb-2">Dispensary</th>
                <th class="pb-2">Views</th>
                <th class="pb-2">Unique</th>
              </tr>
            </thead>
            <tbody>
              <% (topDispensaries || []).forEach(disp => { %>
                <tr class="border-b hover:bg-gray-50">
                  <td class="py-2">
                    <a href="/dispensary/<%= disp.slug %>" class="text-blue-600 hover:underline font-medium" target="_blank">
                      <%= disp.name %>
                    </a>
                    <div class="text-xs text-gray-500"><%= disp.city %>, <%= disp.state_abbr %></div>
                  </td>
                  <td class="py-2"><%= disp.view_count %></td>
                  <td class="py-2"><%= disp.unique_visitors %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="bg-white rounded-lg shadow p-6 mb-8">
        <h2 class="text-xl font-bold mb-4">Quick Actions</h2>
        <div class="flex flex-wrap gap-3">
          <a href="/admin/dispensaries" class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700">
            Manage Dispensaries
          </a>
          <a href="/admin/scrape" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700">
            Scrape Data
          </a>
          <button onclick="calculateRankings()" class="bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700">
            Calculate Rankings
          </button>
          <a href="/admin/leads" class="bg-orange-600 text-white px-6 py-3 rounded-lg hover:bg-orange-700">
            View Leads
          </a>
        </div>
      </div>

      <!-- Recent Scrape Logs -->
      <div class="bg-white rounded-lg shadow p-6 mb-8">
        <h2 class="text-xl font-bold mb-4">Recent Scrape Logs</h2>
        <table class="w-full">
          <thead>
            <tr class="text-left border-b">
              <th class="pb-2">Job Type</th>
              <th class="pb-2">Location</th>
              <th class="pb-2">Found/Added/Updated</th>
              <th class="pb-2">Status</th>
              <th class="pb-2">Date</th>
            </tr>
          </thead>
          <tbody>
            <% scrapeLogs.forEach(log => { %>
              <tr class="border-b">
                <td class="py-2"><%= log.job_type %></td>
                <td class="py-2"><%= log.location %></td>
                <td class="py-2"><%= log.dispensaries_found %>/<%= log.dispensaries_added %>/<%= log.dispensaries_updated %></td>
                <td class="py-2">
                  <span class="px-2 py-1 rounded text-xs
                    <%= log.status === 'completed' ? 'bg-green-100 text-green-800' :
                        log.status === 'failed' ? 'bg-red-100 text-red-800' :
                        'bg-yellow-100 text-yellow-800' %>">
                    <%= log.status %>
                  </span>
                </td>
                <td class="py-2 text-sm text-gray-600"><%= new Date(log.started_at).toLocaleString() %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>

      <!-- Recent Leads -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-bold mb-4">Recent Leads</h2>
        <table class="w-full">
          <thead>
            <tr class="text-left border-b">
              <th class="pb-2">Name</th>
              <th class="pb-2">Email</th>
              <th class="pb-2">Dispensary</th>
              <th class="pb-2">Source</th>
              <th class="pb-2">Date</th>
            </tr>
          </thead>
          <tbody>
            <% recentLeads.forEach(lead => { %>
              <tr class="border-b">
                <td class="py-2"><%= lead.contact_name %></td>
                <td class="py-2"><%= lead.email %></td>
                <td class="py-2"><%= lead.dispensary_name || 'N/A' %></td>
                <td class="py-2"><%= lead.source %></td>
                <td class="py-2 text-sm text-gray-600"><%= new Date(lead.created_at).toLocaleString() %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
        <div class="mt-4">
          <a href="/admin/leads" class="text-green-600 hover:text-green-700 font-medium">View All Leads â†’</a>
        </div>
      </div>
    </div>

    <!-- Recent Reviews & Votes Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
      <!-- Recent Reviews -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-bold mb-4">Recent User Reviews</h2>
        <div class="space-y-4">
          <% (recentReviews || []).forEach(review => { %>
            <div class="border-b pb-4">
              <div class="flex items-start justify-between mb-2">
                <div>
                  <a href="/dispensary/<%= review.dispensary_slug %>" class="font-semibold text-blue-600 hover:underline" target="_blank">
                    <%= review.dispensary_name %>
                  </a>
                  <div class="text-xs text-gray-500"><%= review.state_abbr %></div>
                </div>
                <div class="text-yellow-500"><%= 'â˜…'.repeat(review.rating) %><%='â˜†'.repeat(5-review.rating) %></div>
              </div>
              <div class="text-sm text-gray-700 mb-2">
                "<%= review.review_text.substring(0, 100) %><%= review.review_text.length > 100 ? '...' : '' %>"
              </div>
              <div class="flex items-center gap-4 text-xs text-gray-500">
                <span><strong><%= review.author_name %></strong></span>
                <span><%= new Date(review.created_at).toLocaleString() %></span>
                <span class="<%= review.is_approved ? 'text-green-600' : 'text-orange-600' %>">
                  <%= review.is_approved ? 'âœ“ Approved' : 'â³ Pending' %>
                </span>
              </div>
            </div>
          <% }); %>
          <% if (!recentReviews || recentReviews.length === 0) { %>
            <div class="text-gray-500 text-center py-4">No reviews yet</div>
          <% } %>
        </div>
      </div>

      <!-- Recent Votes -->
      <div class="bg-white rounded-lg shadow p-6">
        <h2 class="text-xl font-bold mb-4">Recent Votes</h2>
        <div class="space-y-2 max-h-96 overflow-y-auto">
          <% (recentVotes || []).forEach(vote => { %>
            <div class="flex items-center justify-between border-b pb-2">
              <div class="flex-1">
                <a href="/dispensary/<%= vote.dispensary_slug %>" class="text-sm font-medium text-blue-600 hover:underline" target="_blank">
                  <%= vote.dispensary_name %>
                </a>
                <div class="text-xs text-gray-500"><%= vote.state_abbr %></div>
              </div>
              <div class="flex items-center gap-2">
                <span class="<%= vote.vote_type === 1 ? 'text-green-600' : 'text-red-600' %> font-bold text-lg">
                  <%= vote.vote_type === 1 ? 'ðŸ‘' : 'ðŸ‘Ž' %>
                </span>
                <span class="text-xs text-gray-500">
                  <%= new Date(vote.created_at).toLocaleTimeString() %>
                </span>
              </div>
            </div>
          <% }); %>
          <% if (!recentVotes || recentVotes.length === 0) { %>
            <div class="text-gray-500 text-center py-4">No votes yet</div>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <script>
  async function calculateRankings() {
    if (!confirm('This will recalculate all rankings. Continue?')) return;

    try {
      const response = await fetch('/admin/rankings/calculate', { method: 'POST' });
      const data = await response.json();

      if (data.success) {
        alert('Rankings calculation started! Check the console for progress.');
      } else {
        alert('Error starting rankings calculation');
      }
    } catch (error) {
      alert('Error: ' + error.message);
    }
  }
  </script>
</body>
</html>
