<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%- include('../partials/favicon') %>
  <%- include('../partials/analytics') %>
  <title><%= title %></title>
  <meta name="description" content="<%= meta.description %>">
  <meta name="keywords" content="<%= meta.keywords %>">
  <meta property="og:title" content="<%= post.title %>">
  <meta property="og:description" content="<%= post.excerpt %>">
  <% if (post.featured_image) { %>
    <meta property="og:image" content="<%= post.featured_image %>">
  <% } %>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Inter', sans-serif; }
    .prose h2 { font-size: 1.875rem; font-weight: 700; margin-top: 2rem; margin-bottom: 1rem; }
    .prose h3 { font-size: 1.5rem; font-weight: 600; margin-top: 1.5rem; margin-bottom: 0.75rem; }
    .prose p { margin-bottom: 1rem; line-height: 1.75; }
    .prose ul, .prose ol { margin-bottom: 1rem; padding-left: 1.5rem; }
    .prose li { margin-bottom: 0.5rem; }
    .prose strong { font-weight: 600; }
    .prose a { color: #16a34a; text-decoration: underline; }
    .prose code { background: #f3f4f6; padding: 0.125rem 0.25rem; border-radius: 0.25rem; font-family: monospace; }
  </style>
</head>
<body class="bg-gray-50">
  <%- include('../partials/header') %>

  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Breadcrumb -->
    <nav class="mb-6 text-sm text-gray-600">
      <a href="/" class="hover:text-green-600">Home</a>
      <span class="mx-2">/</span>
      <a href="/blog" class="hover:text-green-600">Blog</a>
      <span class="mx-2">/</span>
      <span class="text-gray-900"><%= post.title %></span>
    </nav>

    <!-- Header -->
    <header class="mb-8">
      <div class="text-green-600 font-semibold mb-2"><%= post.category %></div>
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4"><%= post.title %></h1>
      <div class="flex items-center gap-4 text-gray-600 text-sm">
        <span>By <%= post.author %></span>
        <span>•</span>
        <span><%= new Date(post.created_at).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></span>
        <span>•</span>
        <span><%= post.view_count %> views</span>
      </div>
    </header>

    <!-- Featured Image -->
    <% if (post.featured_image) { %>
      <img src="<%= post.featured_image %>" alt="<%= post.title %>" class="w-full rounded-lg shadow-lg mb-8">
    <% } %>

    <!-- Content -->
    <div class="bg-white rounded-lg shadow-lg p-8 prose max-w-none mb-12">
      <%- post.content %>
    </div>

    <!-- Tags -->
    <% if (post.tags && post.tags.length > 0) { %>
      <div class="mb-8">
        <div class="text-sm font-semibold text-gray-700 mb-3">Tags:</div>
        <div class="flex flex-wrap gap-2">
          <% post.tags.forEach(tag => { %>
            <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm"><%= tag %></span>
          <% }); %>
        </div>
      </div>
    <% } %>

    <!-- Related Posts -->
    <% if (relatedPosts && relatedPosts.length > 0) { %>
      <div class="border-t border-gray-200 pt-8">
        <h2 class="text-2xl font-bold mb-6">Related Articles</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <% relatedPosts.forEach(related => { %>
            <a href="/blog/<%= related.slug %>" class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition">
              <% if (related.featured_image) { %>
                <img src="<%= related.featured_image %>" alt="<%= related.title %>" class="w-full h-32 object-cover">
              <% } else { %>
                <div class="w-full h-32 bg-gradient-to-r from-green-400 to-blue-500"></div>
              <% } %>
              <div class="p-4">
                <div class="text-xs text-green-600 font-semibold mb-1"><%= related.category %></div>
                <h3 class="font-bold text-gray-900 line-clamp-2"><%= related.title %></h3>
              </div>
            </a>
          <% }); %>
        </div>
      </div>
    <% } %>

    <!-- Back to Blog -->
    <div class="mt-12 text-center">
      <a href="/blog" class="inline-block bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition font-semibold">
        ← Back to Blog
      </a>
    </div>
  </article>

  <%- include('../partials/footer') %>
</body>
</html>
