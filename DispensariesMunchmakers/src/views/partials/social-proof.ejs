<% if (socialProof) { %>
  <!-- Social Proof Indicators -->
  <div class="bg-gradient-to-r from-green-50 to-blue-50 border border-green-200 rounded-lg p-4 mb-6">
    <div class="flex flex-wrap items-center gap-4">
      <!-- Trending Badge -->
      <% if (socialProof.trendingStatus && socialProof.trendingStatus.isTrending) { %>
        <div class="flex items-center gap-2 bg-gradient-to-r from-orange-500 to-red-500 text-white px-4 py-2 rounded-full shadow-md animate-pulse">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd" />
          </svg>
          <span class="font-bold text-sm">TRENDING NOW</span>
        </div>
      <% } %>

      <!-- View Count -->
      <% if (socialProof.viewStats && socialProof.viewStats.views_24h > 0) { %>
        <div class="flex items-center gap-2 text-gray-700">
          <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
          <div>
            <span class="font-semibold text-green-700"><%= socialProof.viewStats.views_24h %></span>
            <span class="text-sm">
              <%= socialProof.viewStats.views_24h === 1 ? 'person' : 'people' %> viewed
              <span class="font-medium">in the last 24 hours</span>
            </span>
          </div>
        </div>
      <% } %>

      <!-- Last Viewed -->
      <% if (socialProof.viewStats && socialProof.viewStats.lastViewedText && socialProof.viewStats.lastViewedText !== 'recently') { %>
        <div class="flex items-center gap-2 text-gray-600 text-sm">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>Last viewed <strong><%= socialProof.viewStats.lastViewedText %></strong></span>
        </div>
      <% } %>

      <!-- Popularity Badge -->
      <% if (socialProof.popularityRank && socialProof.popularityRank.isTopTen) { %>
        <div class="flex items-center gap-2 bg-purple-100 text-purple-800 px-3 py-1.5 rounded-full border border-purple-300">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
          </svg>
          <span class="text-xs font-semibold">TOP <%= socialProof.popularityRank.rank %> MOST POPULAR</span>
        </div>
      <% } else if (socialProof.popularityRank && socialProof.popularityRank.isTopThird) { %>
        <div class="flex items-center gap-2 bg-blue-100 text-blue-800 px-3 py-1.5 rounded-full border border-blue-300">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" />
          </svg>
          <span class="text-xs font-semibold">POPULAR IN YOUR AREA</span>
        </div>
      <% } %>
    </div>

    <!-- Weekly Engagement Stats -->
    <% if (socialProof.clickStats && (socialProof.clickStats.clicks_week > 0 || socialProof.viewStats.views_week > 10)) { %>
      <div class="mt-3 pt-3 border-t border-green-200">
        <div class="flex flex-wrap gap-4 text-sm text-gray-600">
          <% if (socialProof.viewStats && socialProof.viewStats.views_week > 0) { %>
            <div class="flex items-center gap-1.5">
              <span class="font-semibold text-green-700"><%= socialProof.viewStats.views_week %></span>
              <span>views this week</span>
            </div>
          <% } %>

          <% if (socialProof.clickStats && socialProof.clickStats.website_clicks_week > 0) { %>
            <div class="flex items-center gap-1.5">
              <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path>
              </svg>
              <span class="font-semibold text-blue-700"><%= socialProof.clickStats.website_clicks_week %></span>
              <span>website visits</span>
            </div>
          <% } %>

          <% if (socialProof.clickStats && socialProof.clickStats.phone_clicks_week > 0) { %>
            <div class="flex items-center gap-1.5">
              <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <span class="font-semibold text-green-700"><%= socialProof.clickStats.phone_clicks_week %></span>
              <span>phone calls</span>
            </div>
          <% } %>
        </div>
      </div>
    <% } %>
  </div>
<% } %>
