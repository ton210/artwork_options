<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#000000">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ© Magic Trick Controller"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âšª Disconnected"
        android:textSize="16sp"
        android:textColor="#999999"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/serverUrlInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Server URL (e.g., ws://yourapp.herokuapp.com)"
        android:textColorHint="#666666"
        android:textColor="#FFFFFF"
        android:background="@android:drawable/editbox_background"
        android:padding="12dp"
        android:inputType="textUri"
        android:text="ws://localhost:3000"
        app:layout_constraintTop_toBottomOf="@id/statusText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <Button
        android:id="@+id/connectButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Connect to Server"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/serverUrlInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/nfcLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“± NFC MODE"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/connectButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/nfcStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hold your phone to another Android phone to beam the magic URL"
        android:textSize="14sp"
        android:textColor="#999999"
        app:layout_constraintTop_toBottomOf="@id/nfcLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/effectsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âœ¨ EFFECTS CONTROL"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/nfcStatus"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"/>

    <LinearLayout
        android:id="@+id/effectsGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/effectsLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnGlitch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“º Glitch"
                android:layout_marginEnd="6dp"/>

            <Button
                android:id="@+id/btnCrash"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ’¥ Crash"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnFlicker"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="âš¡ Flicker"
                android:layout_marginEnd="6dp"/>

            <Button
                android:id="@+id/btnShake"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“³ Shake"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnStatic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“¡ Static"
                android:layout_marginEnd="6dp"/>

            <Button
                android:id="@+id/btnMatrix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸŸ¢ Matrix"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”„ Reset (Normal)"
            android:backgroundTint="#4CAF50"/>
    </LinearLayout>

    <Switch
        android:id="@+id/autoModeSwitch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸ¤– Auto Mode (Random Effects)"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/effectsGrid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
